    <div class="employee-list">
        {% if page_obj %}
            {% for employee in page_obj %}
            <div class="employee-card" onclick="location.href='{% url 'employee_detail' employee.employee_id %}'">
                <div class="employee-info">
                    <h3>{{ employee.name }}</h3>
                    <p>员工ID: {{ employee.employee_id }}</p>
                    <p>年龄: {{ employee.age }}</p>
                    <p>入职时间: {{ employee.current_hire_date }}</p>
                </div>
                <div class="employee-status {% if employee.is_employed %}employed{% else %}not-employed{% endif %}">
                    {{ employee.is_employed|yesno:"在职,离职" }}
                </div>
            </div>
            {% endfor %}
        {% else %}
            <div class="no-results">
                <p>没有找到符合条件的员工</p>
            </div>
        {% endif %}
